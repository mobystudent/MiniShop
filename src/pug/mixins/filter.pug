// Это миксин фильтра
mixin filter(obj)
	.filter
		if obj.type == 'block'
			// Если тип фильтра выпадающий список под блоком
			.filter__field.filter__field--block
				header.filter__header
					h3.filter__title!= obj.title
					svg.icon.icon--arrow.icon--arrow-filter
						use.icon__item(xlink:href='#arrow')
			.filter__body.filter__body--block
				ul.filter__list.filter__list--block
					
					each item in obj.items
						li.filter__item.filter__item--block!= item
		else
			// Если тип фильтра выпадающий список в поле
			.filter__field.filter__field--select
				h3.filter__title!= obj.title
				.filter__select
					header.filter__header.filter__header--select
						span.filter__selected!= obj.title
						svg.icon.icon--arrow.icon--arrow-filter
							use.icon__item(xlink:href='#arrow')
					.filter__body.filter__body--select
						ul.filter__list.filter__list--select
							
							each item in obj.items
								li.filter__item.filter__item--select!= item
